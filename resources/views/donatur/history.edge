                <option value="">Semua Status</option>
                <option value="berhasil" {{ filters && filters.status === 'berhasil' ? 'selected' : '' }}>Berhasil</option>
                <option value="pending" {{ filters && filters.status === 'pending' ? 'selected' : '' }}>Pending</option>
                <option value="gagal" {{ filters && filters.status === 'gagal' ? 'selected' : '' }}>Gagal</option>
              </select>
            </div>
            
            <!-- Date Filter -->
            <div>
              <label for="date_filter" class="block text-gray-700 text-sm font-bold mb-2">
