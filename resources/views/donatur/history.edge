          <p class="text-gray-600">Lihat semua riwayat donasi yang telah dilakukan oleh {{ donatur.nama }}</p>
        </div>        <!-- Filter Section -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
          <h2 class="text-lg font-semibold mb-4">Filter Riwayat Donasi</h2>
          
          <form action="{{ route('donatur.history', [donatur.id]) }}" method="GET" class="grid md:grid-cols-3 gap-4">
            <!-- Kampanye Filter -->
            <div>
              <label for="kampanye_filter" class="block text-gray-700 text-sm font-bold mb-2">
                Kampanye
              </label>
              <select id="kampanye_filter" name="kampanye_id" class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <option value="">Semua Kampanye</option>                @if(donasis && donasis.length > 0)
                  @each(donasi in donasis.filter(d => d.$extras.transaksi && d.$extras.transaksi.kampanye).reduce((unique, d) => {
                    const kampanye = d.$extras.transaksi.kampanye;
                    if (!unique.some(u => u.id === kampanye.id)) {
                      unique.push(kampanye);
                    }
                    return unique;
                  }, []))
                    <option value="{{ donasi.id }}" {{ filters && filters.kampanye_id === donasi.id.toString() ? 'selected' : '' }}>{{ donasi.judul }}</option>
                  @end
                @endif
              </select>
            </div>
            
            <!-- Status Filter -->
            <div>
              <label for="status_filter" class="block text-gray-700 text-sm font-bold mb-2">
