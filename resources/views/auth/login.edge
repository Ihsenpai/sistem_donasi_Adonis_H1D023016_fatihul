<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login - DonasiKu</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.bunny.net">
  <link href="https://fonts.bunny.net/css?family=figtree:400,500,600&display=swap" rel="stylesheet" />

  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Figtree', 'sans-serif'],
          },
          colors: {
            primary: {
              DEFAULT: "#1b5e20", // Dark green
              light: "#4c8c4a",
              dark: "#003300",
            },
            secondary: {
              DEFAULT: "#212121", // Black
              light: "#484848",
              dark: "#000000",
            },
          }
        }
      }
    }
  </script>
</head>
<body class="antialiased font-sans bg-gray-50">
  <div class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-primary text-white shadow-md">
      <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <div class="flex items-center">
          <a href="/" class="text-2xl font-bold">DonasiKu</a>
        </div>
        
        <div class="flex space-x-4">
          <a href="/login" class="text-white hover:text-green-200 font-semibold">Login</a>
          <a href="/register" class="bg-white text-primary hover:bg-green-100 px-4 py-2 rounded-lg font-semibold">Register</a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div class="w-full max-w-md">
        <div class="bg-white p-8 rounded-lg shadow-md">
          <div class="text-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">
              Login to DonasiKu
            </h2>
            <p class="mt-2 text-sm text-gray-600">
              Or
              <a href="/register" class="text-primary hover:text-primary-dark font-medium">
                create a new account
              </a>
            </p>
          </div>

          @if(flashMessages.has('errors.form'))
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
              <p>{{ flashMessages.get('errors.form') }}</p>
            </div>
          @endif

          <form action="/login" method="POST">
            {{ csrfField() }}

            <!-- Email -->
            <div class="mb-4">
              <label for="email" class="block text-gray-700 text-sm font-bold mb-2">
                Email
              </label>
              <input
                id="email"
                type="email"
                name="email"
                value="{{ flashMessages.get('email', '') }}"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline {{ flashMessages.has('errors.email') ? 'border-red-500' : '' }}"
                required
                autofocus
              />
              @if(flashMessages.has('errors.email'))
                <p class="text-red-500 text-xs mt-1">{{ flashMessages.get('errors.email') }}</p>
              @endif
            </div>

            <!-- Password -->
            <div class="mb-6">
              <label for="password" class="block text-gray-700 text-sm font-bold mb-2">
                Password
              </label>
              <input
                id="password"
                type="password"
                name="password"
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline {{ flashMessages.has('errors.password') ? 'border-red-500' : '' }}"
                required
              />
              @if(flashMessages.has('errors.password'))
                <p class="text-red-500 text-xs mt-1">{{ flashMessages.get('errors.password') }}</p>
              @endif
            </div>

            <!-- Remember Me -->
            <div class="mb-6 flex items-center">
              <input
                id="remember"
                type="checkbox"
                name="remember"
                class="rounded border-gray-300 text-primary shadow-sm focus:border-primary-light focus:ring focus:ring-primary-light focus:ring-opacity-50"
              />
              <label for="remember" class="ml-2 block text-sm text-gray-700">
                Remember me
              </label>
            </div>
              <button type="submit" class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Log in
              </button>
          </form>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-primary text-white py-4">
      <div class="container mx-auto px-4 text-center">
        <p>Â© 2025 DonasiKu. All rights reserved.</p>
      </div>
    </footer>
  </div>
</body>
</html>
      

